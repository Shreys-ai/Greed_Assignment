{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nightwatch Cucumber Test",
      "program": "${workspaceFolder}/node_modules/.bin/nightwatch",
      "args": [
        "--test",
        "test/features/nightwatch/sample.feature" // <-- Update this path to your feature file
      ],
      "cwd": "${workspaceFolder}",
      "autoAttachChildProcesses": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
